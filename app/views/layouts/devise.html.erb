<!DOCTYPE html>
<html>
  <head>
    <title>Azordens</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="/assets/angular-i18n/angular-locale_pt-br.js"></script>
  </head>

  <body class="sessions" ng-controller="MainCtrl">

    <div class="container-fluid">
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4 bgm-white p-30">
          <%= image_tag 'logo.png', class: 'img-responsive' %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-4 col-xs-offset-4 bgm-white">
          <% flash.each do |key, msg| %>
            <div class="alert alert-warning">
              <a href="#" data-dismiss="alert" class="close">×</a>
                <p><i class="fa fa-info-circle"></i> <%= msg %></p>
            </div>
          <% end %>
          <% if devise_error_messages!.any? %>
            <div class="alert alert-warning">
              <a href="#" data-dismiss="alert" class="close">×</a>
              <% devise_error_messages!.each do |msg| %>
                <p><i class="fa fa-info-circle"></i> <%= msg %></p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-6 col-xs-offset-4">
          <%= yield %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 force-to-bottom text-right c-white">
        Criado por <a target="_blank" href="https://www.facebook.com/zordanguilherme">Guilherme</a> <a target="_blank" href="https://www.linkedin.com/profile/view?id=AAMAABjhGysBYDFpD-63zHCC3GO0HLxYQJ2XHms&trk=hp-identity-photo">Zordan</a>
      </div>
    </div>
  </body>

</html>
