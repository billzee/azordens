<!DOCTYPE html>
<html>
  <head>
    <title>Azordens</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="/assets/angular-i18n/angular-locale_pt-br.js"></script>

  </head>

  <body ng-controller="MainCtrl">

    <div id="wrapper">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to orders_path, class: "navbar-brand" do %>
            Azordens
          <% end %>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
          <button class="btn btn-danger pull-right m-t-8 m-r-15">
            <i class="fa fa-power-off"></i>
          </button>

          <ul class="nav navbar-nav side-nav">
            <li>
              <%= link_to orders_path, class: is_active('orders') do %>
                <i class="fa fa-fw fa-sticky-note-o"></i> Ordens de servi√ßo
              <% end %>
            </li>
            <li>
              <%= link_to customers_path, class: is_active('customers') do %>
                <i class="fa fa-fw fa-users"></i> Clientes
              <% end %>
            </li>
            <li>
              <%= link_to equipments_path, class: is_active('equipments') do %>
              <i class="fa fa-fw fa-wrench"></i> Equipamentos
              <% end %>
            </li>
            <li>
              <%= link_to brands_path, class: is_active('brands') do %>
                <i class="fa fa-fw fa-heart"></i> Marcas
              <% end %>
            </li>
          </ul>
        </div>
      </nav>

      <div id="page-wrapper">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>

	  </div>

  </body>
</html>
