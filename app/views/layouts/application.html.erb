<!DOCTYPE html>
<html>
  <head>
    <title>Azordens</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script src="/assets/angular-i18n/angular-locale_pt-br.js"></script>
  </head>

  <body ng-controller="MainCtrl">

    <div id="wrapper">
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header w-100">
          <%= link_to orders_path, class: "navbar-brand" do %>
            <%= image_tag 'logo.png', class: 'img-responsive w-200' %>
          <% end %>

          <%= button_to destroy_user_session_path, class: 'btn btn-danger m-t-8 m-r-15 relative pull-right', :method => :delete, data: {confirm: 'Sair?'} do %>
            <i class="fa fa-power-off"></i>
          <% end %>

          <button type="button" ng-click="showHints(true)" class="btn btn-primary btn-circle m-t-8 m-r-10 relative pull-right">
            <i class="fa fa-question"></i>
          </button>

          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

      </nav>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav side-nav">
          <li>
            <%= link_to orders_path, class: is_active('orders') do %>
              <i class="fa fa-fw fa-sticky-note-o"></i> Ordens de servi√ßo
            <% end %>
          </li>
          <li>
            <%= link_to customers_path, class: is_active('customers') do %>
              <i class="fa fa-fw fa-users"></i> Clientes
            <% end %>
          </li>
          <li>
            <%= link_to equipments_path, class: is_active('equipments') do %>
              <i class="fa fa-fw fa-wrench"></i> Equipamentos
            <% end %>
          </li>
          <li>
            <%= link_to brands_path, class: is_active('brands') do %>
              <i class="fa fa-fw fa-heart"></i> Marcas
            <% end %>
          </li>
        </ul>
      </div>

      <div id="page-wrapper">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>

      {{showHints(false)}}
	  </div>
  </body>

</html>
