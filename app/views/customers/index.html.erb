<div ng-controller="CustomersCtrl">
  <div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
          Clientes
        </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @customers.length > 0 %>
        <div class="alert alert-info alert-dismissable">
          <i class="fa fa-info-circle"></i>  Clique no nome do Cliente que deseja alterar
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success fade in out">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <i class="fa fa-check-circle"></i> <%= flash[:notice] %>
        </div>
      <% end %>

      <% if @customers.length == 0 %>
        <div class="alert alert-warning">
          <i class="fa fa-warning"></i> Você não tem nenhum Cliente cadastrado
        </div>
      <% end %>

    </div>
  </div>

  <div class="row m-b-20">
    <div class="col-xs-12 text-right">
      <%= link_to new_customer_path, class: "btn btn-success btn-md" do %>
        <i class="fa fa-plus-square-o"></i> Novo Cliente
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @customers.length > 0 %>
        <div class="table-responsive">
          <table ng-table="ngTableParams" class="table table-hover" show-filter="true">
            <tr ng-repeat="row in $data">
              <td data-title="'Nome Completo'" sortable="'first_name'" header-class="'bg-orange c-white pointer'" data-filter="{first_name: 'text'}">
                <a href="/customers/{{row.id}}/edit/">{{row.first_name + ' ' + row.last_name}}</a>
              </td>
              <td data-title="'E-mail'" sortable="'email'" header-class="'bg-orange c-white pointer'" data-filter="{email: 'text'}">
                {{row.email}}
              </td>
              <td data-title="'Telefone'" sortable="'phone'" header-class="'bg-orange c-white pointer'" data-filter="{phone: 'text'}">
                {{row.phone}}
              </td>
              <td data-title="'Criado em'" sortable="'created_at'" header-class="'bg-orange c-white pointer'" data-filter="{created_at: 'text'}">
                {{row.created_at_date_for_json}}
              </td>
            </tr>
          </table>
        </div>
      <% end %>
    </div>
  </div>
</div>
