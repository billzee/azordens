<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Alterar <small>Marca</small>
    </h1>
  </div>
</div>

<% if @brand.errors.full_messages.any? %>
  <div class="alert alert-danger alert-dismissable">
    <% @brand.errors.full_messages.each do |msg| %>
      <i class="fa fa-warning"></i>  <%= msg %>
    <% end %>
  </div>
<% end %>

<%= form_for @brand, url: {action: "update"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group <%= 'has-error has-feedback' if @brand.errors[:name].present? %>">
        <label>Nome</label>
        <%= f.text_field :name, class: "form-control" %>
        <% if @brand.errors[:name].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Alterar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', brands_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
