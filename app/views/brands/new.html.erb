<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Nova <small>Marca</small>
    </h1>
  </div>
</div>


<% if @brand.errors.full_messages.any? %>
  <div class="alert alert-danger alert-dismissable">
    <% @brand.errors.full_messages.each do |msg| %>
      <i class="fa fa-warning"></i>  <%= msg %>
    <% end %>
  </div>
<% end %>

<%= form_for @brand, url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group has-error has-feedback">
        <label>Nome</label>
        <%= f.text_field :name, class: "form-control" %>
        <span class="form-control-feedback">
          <i class="fa fa-warning"></i>
        </span>
        <span id="helpBlock" class="help-block"><%= @brand.errors.full_messages.first if @brand.errors.any? %></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Criar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', brands_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
