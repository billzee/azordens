<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Nova <small>Marca</small>
    </h1>
  </div>
</div>

<%= form_for @brand, url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Nome</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Criar", class: "btn btn-success" %>
      </div>
    </div>
  </div>

<% end %>
