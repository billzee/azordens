<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Alterar <small>Equipamento</small>
    </h1>
  </div>
</div>

<% if @equipment.errors.full_messages.any? %>
  <div class="alert alert-danger alert-dismissable">
    <% @equipment.errors.full_messages.each do |msg| %>
      <p><i class="fa fa-warning"></i>  <%= msg %></p>
    <% end %>
  </div>
<% end %>

<%= form_for @equipment, url: {action: "update"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
        <div class="form-group <%= 'has-error has-feedback' if @equipment.errors[:description].present? %>">
        <label>Descrição*</label>
        <%= f.text_field :description, class: "form-control" %>
        <% if @equipment.errors[:description].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
        <div class="form-group <%= 'has-error has-feedback' if @equipment.errors[:model].present? %>">
        <label>Modelo</label>
        <%= f.text_field :model, class: "form-control" %>
        <% if @equipment.errors[:model].present? %>
          <span class="form-control-feedback">
            <i class="fa fa-warning"></i>
          </span>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group <%= 'has-error has-feedback' if @equipment.errors[:brand_id].present? %>">
        <label>Marca</label>
        <%= f.collection_select(:brand_id, Brand.all, :id, :name, {:include_blank => "Selecione uma Marca"}, {class: "form-control"}) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Alterar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', equipments_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
