<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Alterar <small>Marca</small>
    </h1>
  </div>
</div>

<%= form_for @brand, url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Nome</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Alterar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', brands_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
