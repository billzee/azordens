<div>
  <div class="row">
    <div class="col-xs-12">
        <h1 class="page-header">
          Equipamentos
        </h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @all_equipment.length > 0 %>
        <div class="alert alert-info alert-dismissable">
          <i class="fa fa-info-circle"></i>  Clique no nome do Equipamento que deseja alterar
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success fade in out">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <i class="fa fa-check-circle"></i> <%= flash[:notice] %>
        </div>
      <% end %>

      <% if @all_equipment.length == 0 %>
        <div class="alert alert-warning">
          <i class="fa fa-warning"></i> Você não tem nenhum Equipamento cadastrado
        </div>
      <% end %>

    </div>
  </div>

  <div class="row m-b-20">
    <div class="col-xs-12 text-right">
      <%= link_to new_equipment_path, class: "btn btn-success btn-md" do %>
        <i class="fa fa-plus-square-o"></i> Novo Equipamento
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <% if @all_equipment.length > 0 %>
        <div class="table-responsive">
        	<table class="table table-hover">
            <thead class="c-white bg-orange">
              <tr>
                <th class="col-md-3">Nome</th>
                <th class="col-md-4">Modelo</th>
                <th class="col-md-4">Marca</th>
                <th class="col-md-1 text-center">Excluir</th>
              </tr>
            </thead>
            <tbody>
            	<% @all_equipment.each do |equipment| %>
                <tr>
                  <td class="col-md-3">
                    <%= link_to equipment.name, edit_equipment_path(equipment.id) %>
                  </td>
                  <td class="col-md-4">
                    <%= equipment.model %>
                  </td>
                  <td class="col-md-4">
                    <%= Brand.find(equipment.brand_id).name %>
                  </td>
                  <td class="col-md-1 text-center">
                    <button ng-click="delete(<%= equipment.id %>, 'equipments')" class="btn btn-danger">
                      <i class="fa fa-fw fa-trash"></i>
                    </button>
                  </td>
                </tr>
              <% end %>
            </tbody>
        	</table>
        </div>
      <% end %>
    </div>
  </div>
</div>
