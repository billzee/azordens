<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      Novo <small>Equipamento</small>
    </h1>
  </div>
</div>

<%= form_for @equipment, url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Nome</label>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Modelo</label>
        <%= f.text_field :model, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Descrição</label>
        <%= f.text_field :description, class: "form-control" %>
      </div>
    </div>
  </div>

  <!-- <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <label>Marca</label>
        <%= f.collection_select(:brand_id, Brand.all, :id, :name, {}, {class: "form-control"}) %>
      </div>
    </div>
  </div> -->

  <div class="row">
    <div class="col-lg-12">
      <div class="form-group">
        <%= f.submit "Criar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', equipments_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
