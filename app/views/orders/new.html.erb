<div class="row">
  <div class="col-xs-12">
    <h1 class="page-header">
      Nova <small>OS</small>
    </h1>
  </div>
</div>

<% if flash[:error] %>
  <div class="alert alert-danger alert-dismissable">
    <% flash[:error].each do |msg| %>
      <p><i class="fa fa-warning"></i>  <%= msg %></p>
    <% end %>
  </div>
<% end %>

<% if flash[:notice] %>
  <div class="alert alert-success fade in out">
    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    <i class="fa fa-check-circle"></i> <%= flash[:notice] %>
  </div>
<% end %>

<%= form_for @order, url: {action: "create"} do |f| %>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>Cliente*</label>
        <br>
        <%= f.collection_select(:customer_id, Customer.all, :id, :full_name, {:include_blank => "Selecione um Cliente"}, {class: "form-control"}) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <label>Equipamento*</label>
        <br>
        <%= f.collection_select(:equipment_id, Equipment.all, :id, :specs, {:include_blank => "Selecione um Equipamento"}, {class: "form-control"}) %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <div class="form-group">
        <label>Defeito*</label>
        <%= f.text_field :defect, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <div class="form-group">
        <label>Número Serial</label>
        <%= f.text_field :serial_number, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
        <div class="form-group">
        <label>Observação</label>
        <%= f.text_area :observation, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.submit "Criar", class: "btn btn-success" %>
        <%= link_to 'Cancelar', orders_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>

<% end %>
